<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/addShopTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DD3302">

        <ImageView
            android:id="@+id/merchant_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/bcak01" />

        <RelativeLayout
            android:id="@+id/discount_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingBottom="@dimen/dimen_6_dp"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/dimen_6_dp"
                android:text="添加商品"
                android:textColor="#ffffff"
                android:textSize="@dimen/dimen_20_dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/addShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="新增商品"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_shopName"
        android:layout_below="@id/addShopTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_radius_gray"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/fdj" />

            <EditText
                android:id="@+id/serch_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:hint="搜索商品条码"
                android:inputType="number"
                android:maxLength="16"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColorHint="#cccccc" />
        </LinearLayout>

        <ImageView
            android:id="@+id/scanning_shop_tiaoxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/scan" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_shopName"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/listview_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

    <ListView
        android:id="@+id/left_listview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scrollbars="none"
        android:background="#EFEFEF"
        android:divider="@null"></ListView>

    <com.lianpos.devfoucs.listviewlinkage.View.PinnedHeaderListView
        android:id="@+id/pinnedListView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:background="@android:color/white"></com.lianpos.devfoucs.listviewlinkage.View.PinnedHeaderListView>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#cccccc"
            android:padding="@dimen/dimen_5_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shoppingNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥"
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_18_dp" />

                <TextView
                    android:id="@+id/shoppingPrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="0.00"
                    android:textSize="@dimen/dimen_18_dp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/settlement"
            android:layout_width="@dimen/dimen_0_dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/shopping_cart_bg"
            android:gravity="center"
            android:text="结算"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16_dp" />

    </LinearLayout>
</RelativeLayout>


